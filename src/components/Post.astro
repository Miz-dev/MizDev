---
const { title, url, pubDate, tags } = Astro.props;
---

<li class="postItem">
  <a href={url}>
    <h2>{title}</h2>
    <time>{pubDate}</time>
    <span class="tag">{tags}</span>
  </a>
</li>

<style>
  .postItem {
    border: 0px solid #2c568e;
    box-shadow: 0px 0px 5px 0px rgba(44, 86, 142, 0.35);
    border-radius: 0.5rem;
    list-style: none;
  }
  .postItem a {
    display: flex;
    flex-direction: column;
    align-items: center;
    color: #2c568e;
    text-decoration: none;
    padding: 2.5rem 2rem;
    font-size: 1.2rem;
    font-weight: bold;
    transition: all 0.4s;
  }
  .postItem a:hover,
  a:focus {
    background-color: rgba(44, 86, 142, 0.1);
    border-radius: 0.5rem;
  }
  h2 {
    font-size: 1.2rem;
    margin-top: 0;
  }
  time {
    font-size: 0.8rem;
    margin-bottom: 1rem;
  }
  .postItem .tag {
    transition: none;
    pointer-events: none;
  }
</style>
