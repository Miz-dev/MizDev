---
const { title, url, pubDate } = Astro.props;
---

<li class="postItem">
  <a href={url}>
    <h2>{title}</h2>
    <time>{pubDate}</time>
  </a>
</li>

<style>
  .postItem {
    border: 2px solid #2c568e;
    border-radius: 1.5rem;
    list-style: none;
  }
  .postItem a {
    display: flex;
    flex-direction: column;
    align-items: center;
    color: #2c568e;
    text-decoration: none;
    padding: 2.5rem 2rem;
    font-size: 1.2rem;
    font-weight: bold;
    transition: all 0.4s;
  }
  .postItem a:hover,
  a:focus {
    opacity: 0.5;
  }
  h2 {
    font-size: 1.2rem;
    margin-top: 0;
  }
  time {
    font-size: 1rem;
  }
</style>
